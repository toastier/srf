h1 Add New Applicant

div(ng-init="vm.activate('create')")
  form(name="vm.forms.applicantCreate")
    .panel
      .panel-title
        .col-md-6
          h4 {{ vm.newApplicant.firstName + ' ' + vm.newApplicant.lastName }} &nbsp;
            button.btn.btn-xs.no-text.btn-save(ng-click="vm.createApplicant(applicant)", ng-show="vm.forms.applicantCreate.$dirty")
        .col-md-6.text-right
          h4
            strong Date Added: &nbsp;
            | {{ user.created | standardDate }}
      .panel-body
        .row
          .col-md-12
            .row
              .col-md-4
                .input-group.form-group
                  .input-group-addon First Name
                  input.form-control(ng-model="vm.newApplicant.name.firstName")
              .col-md-4
                .input-group.form-group
                  .input-group-addon Last Name
                  input.form-control(ng-model="vm.newApplicant.name.lastName")
              //.col-md-4
              //  .input-group.form-group
              //    .input-group-addon Applicantname
              //    input.form-control(ng-model="vm.newApplicant.applicantname")
            .row
              .col-md-4
                .input-group.form-group
                  .input-group-addon Email
                  input.form-control(ng-model="vm.newApplicant.emailAddresses[0].emailAddress")
