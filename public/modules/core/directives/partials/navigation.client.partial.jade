.row.navigation(sticky, offset="50", sticky-class="stuck", media-query="min-width: 768px")
  .col-xs-12
    .row
      .col-md-6
        h1.page-title {{ nav.title.name }}
      .col-md-6.page-actions
        .btn-group.pull-right(ng-show="nav.dropdownItems.length > 0")
          .btn-group(dropdown, keyboard-nav, is-open="nav.status.isOpen")
            button.btn.btn-action.rounded(dropdown-toggle) Available Actions
            ul.dropdown-menu(role="menu")
              li(role="menuitem", ng-repeat="dropdownItem in nav.dropdownItems")
                a(ng-click="dropdownItem.method()") {{ dropdownItem.title }}
        button.btn.btn-default.pull-right(class="{{ button.style }}", ng-click="button.method()", ng-disabled="button.disableIf()", ng-repeat="button in nav.buttons") {{ button.title }}
