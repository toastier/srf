ng-form
  .row
    .col-md-3.control-group
      label.control-label Position
      .form-control-static(ng-bind="vm.getPosition(vm.eoe.position)")

    .col-md-6.form-group
      label.control-label Eoe Title
      .form-control-static(type='text', data-ng-bind='vm.eoe.name')
    .col-md-3
      label.control-label Date Requested
      .form-control-static(ng-bind="vm.eoe.dateRequested | date")

  .row
    .col-md-3
      .row
        .col-md-12
          label.control-label Posting Date
          .form-control-static(ng-bind="vm.eoe.datePosted | date")

        .col-md-12
          label.control-label Eoe Date
          .form-control-static(ng-bind="vm.eoe.dateStart | date")

        .col-md-12
          label.control-label Closing Date
          .form-control-static(ng-bind="vm.eoe.dateClose | date")

        .col-md-12.form-group
          label.control-label Is this an active Eoe?&nbsp;
            span(type="checkbox", ng-bind="vm.eoe.isActive | checkMark")
    .col-md-9
      .row
        .col-md-12.form-group
          label.control-label Details
          .form-control-static(data-ng-bind='vm.eoe.details')
  .row
    .col-xs-12
      h3 Online Postings&nbsp;
      table.table.table-striped
        thead
          tr
            th Source
            th Link
        tbody
          tr(ng-repeat="pLink in vm.eoe.postingLink")
            td(ng-bind="pLink.source")
            td
              a(ng-href="http://{{pLink.url}}", ng-bind="pLink.url", target="_blank")