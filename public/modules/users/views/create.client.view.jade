h1 Create User

div(ng-init="vm.activate('create')")
  form(name="vm.forms.userCreate")
    .panel
      .panel-title
        .col-md-6
          h4 {{ vm.newUser.firstName + ' ' + vm.newUser.lastName }} &nbsp;
            button.btn.btn-xs.no-text.btn-save(ng-click="vm.createUser(user)", ng-show="vm.forms.userCreate.$dirty")
        .col-md-6.text-right
          h4
            strong Date Added: &nbsp;
            | {{ user.created | standardDate }}
      .panel-body
        .row
          .col-md-12
            .row
              .col-md-4
                .input-group.form-group
                  .input-group-addon First Name
                  input.form-control(ng-model="vm.newUser.firstName")
              .col-md-4
                .input-group.form-group
                  .input-group-addon Last Name
                  input.form-control(ng-model="vm.newUser.lastName")
              .col-md-4
                .input-group.form-group
                  .input-group-addon Username
                  input.form-control(ng-model="vm.newUser.username")
            .row
              .col-md-4
                .input-group.form-group
                  .input-group-addon Email
                  input.form-control(ng-model="vm.newUser.email")
              .col-md-8
                .input-group.form-group
                  .input-group-addon Roles
                  ui-select(multiple, ng-model="vm.newUser.roles")
                    ui-select-match(placeholder="choose roles") {{$item}}
                    ui-select-choices(repeat="role in vm.options.roles") {{ role }}